{
  "version": "1.0",
  "prefix": "codeagent-",
  "description": "Registry of CodeAgent-managed MCPs. Force reinstall only affects MCPs listed here.",
  "docker": [
    {
      "name": "qdrant",
      "container": "codeagent-qdrant",
      "healthcheck": {
        "type": "tcp",
        "port": 6333
      },
      "dependencies": [],
      "mcp_registration": false
    },
    {
      "name": "letta",
      "container": "codeagent-letta",
      "healthcheck": {
        "type": "http",
        "url": "http://localhost:8283/v1/health/"
      },
      "dependencies": ["qdrant"],
      "mcp_registration": true,
      "mcp_name": "letta",
      "mcp_command": "npx",
      "mcp_args": ["-y", "letta-mcp-server"],
      "mcp_env": {
        "LETTA_BASE_URL": "http://localhost:8283"
      }
    }
  ],
  "npm": [
    {
      "name": "context7",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {},
      "required": true
    }
  ],
  "npm_optional": [
    {
      "name": "github",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env_key": "GITHUB_TOKEN",
      "env_var": "GITHUB_PERSONAL_ACCESS_TOKEN",
      "description": "GitHub repository, issues, PRs, and code search"
    },
    {
      "name": "tavily",
      "command": "npx",
      "args": ["-y", "tavily-mcp"],
      "env_key": "TAVILY_API_KEY",
      "env_var": "TAVILY_API_KEY"
    },
    {
      "name": "figma",
      "command": "npx",
      "args": ["-y", "figma-developer-mcp"],
      "env_key": "FIGMA_API_KEY",
      "env_var": "FIGMA_API_KEY",
      "description": "Figma design integration for extracting design tokens, layouts, and styles"
    },
    {
      "name": "supabase",
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server-supabase@latest"],
      "env_key": "SUPABASE_ACCESS_TOKEN",
      "env_var": "SUPABASE_ACCESS_TOKEN",
      "description": "Supabase project integration for database, auth, and edge functions"
    }
  ],
  "uvx": [
    {
      "name": "code-execution",
      "command": "uvx",
      "args": ["--from", "git+https://github.com/elusznik/mcp-server-code-execution-mode", "mcp-server-code-execution-mode", "run"],
      "env": {
        "MCP_BRIDGE_RUNTIME": "docker",
        "MCP_BRIDGE_IMAGE": "python:3.13-slim",
        "MCP_BRIDGE_TIMEOUT": "60",
        "MCP_BRIDGE_MEMORY": "512m"
      },
      "required": true,
      "description": "Zero-context code execution sandbox. Runs Python/CLIs in isolated Docker containers.",
      "prerequisites": ["docker", "uv"],
      "docker_image": "python:3.13-slim"
    }
  ],
  "python": [
    {
      "name": "reflection",
      "module": "reflection_mcp.server",
      "path": "mcps/reflection-mcp",
      "required": true
    }
  ]
}
