{
  "permissions": {
    "defaultMode": "bypassPermissions",
    "deny": [
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(:*fork bomb:*)",
      "Read(**/secrets/**)",
      "Read(**/.env.local)",
      "Read(**/*.pem)",
      "Read(**/*_rsa)",
      "Write(**/secrets/**)",
      "Write(**/.env*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/dangerous-command-check.sh \"$CLAUDE_TOOL_INPUT_COMMAND\" 2>/dev/null"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "case \"$CLAUDE_TOOL_INPUT_COMMAND\" in 'git commit'*) .claude/hooks/pre-commit.sh 2>/dev/null || true ;; 'git push'*) .claude/hooks/pre-push.sh 2>/dev/null || true ;; esac"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-format.sh \"$CLAUDE_TOOL_INPUT_FILE_PATH\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/index-file.sh \"$CLAUDE_TOOL_INPUT_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-end.sh 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "env": {
    "CODEAGENT_MODE": "autonomous",
    "CODEAGENT_THINKING": "enabled"
  }
}
