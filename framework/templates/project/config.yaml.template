# CodeAgent Project Configuration
# Generated by: codeagent init
# Location: .codeagent/config.yaml

project:
  name: "{{PROJECT_NAME}}"
  type: "{{PROJECT_TYPE}}"  # dotnet, rust, cpp, lua, node, python, generic
  path: "{{PROJECT_PATH}}"
  initialized: "{{TIMESTAMP}}"

# Backlog configuration
backlog:
  # ID prefix for this project (e.g., MP for MyProject -> MP-001)
  id_prefix: "{{ID_PREFIX}}"
  auto_number: true

  # Item statuses
  statuses:
    - backlog      # Not yet ready for work
    - ready        # Dependencies met, can be worked on
    - in_progress  # Currently being implemented
    - blocked      # Waiting on something
    - done         # Completed

  # Default priorities
  priorities:
    - critical
    - high
    - medium
    - low

# Codebase indexing configuration
indexing:
  enabled: true
  incremental: true  # Use Merkle tree for change detection

  # Languages to index (auto-detected if empty)
  languages: []

  # Directories/patterns to exclude from indexing
  exclude:
    - ".git/"
    - ".codeagent/"
    - "node_modules/"
    - "bin/"
    - "obj/"
    - "target/"
    - "dist/"
    - "build/"
    - "__pycache__/"
    - ".venv/"
    - "*.min.js"
    - "*.min.css"

# Memory integration
memory:
  # Tag for filtering A-MEM memories
  project_tag: "project:{{PROJECT_NAME}}"

  # Automatically summarize completed tasks
  auto_summarize: true

  # Store patterns in A-MEM after successful implementation
  store_patterns: true

# Knowledge accumulation
knowledge:
  # Update PROJECT.md on task completion
  auto_update_project_md: true

  # Sections to maintain in PROJECT.md
  sections:
    - overview
    - architecture
    - key_decisions
    - recent_completions
    - open_items
